{
	"name": "@synthetixio/queries-context",
	"publishConfig": {
		"access": "public"
	},
	"version": "1.0.0",
	"source": "./src/index.ts",
	"main": "./build/node/src/index.js",
	"module": "./build/node/src/index.js",
	"browser": "./build/node/src/index.js",
	"types": "./build/node/src/index.d.ts",
	"files": [
		"build",
		"src"
	],
	"scripts": {
		"build": "yarn codegen && yarn build-node",
		"build-node": "tsc -p tsconfig.node.json",
		"build-browser": "webpack-cli --mode=production --max-old-space-size=4096",
		"examples:node": "ts-node --project tsconfig.node.json ./examples/node-example.js",
		"examples:browser": "yarn build-browser && http-server -o ./examples/browser-example.html -c-1",
		"lint": "eslint './src/**/*.{js,ts,tsx}' && tsc",
		"lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
		"test": "jest --forceExit --coverage --no-cache",
		"tsc": "tsc --noemit",
		"codegen": "node ./codegen.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Synthetixio/js-monorepo"
	},
	"author": "Synthetix",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Synthetixio/js-monorepo/issues"
	},
	"dependencies": {
		"@snapshot-labs/snapshot.js": "^0.3.22",
		"@synthetixio/codegen-graph-ts": "workspace:*",
		"@synthetixio/contracts-interface": "workspace:*",
		"@synthetixio/optimism-networks": "workspace:*",
		"@synthetixio/wei": "workspace:*",
		"axios": "^0.21.4",
		"date-fns": "^2.19.0",
		"ethers": "^5.5.3",
		"graphql": "^15.5.0",
		"graphql-request": "^3.4.0",
		"lodash": "^4.17.21"
	},
	"devDependencies": {
		"@babel/core": "^7.11.0",
		"@babel/plugin-transform-runtime": "^7.13.10",
		"@babel/preset-env": "^7.13.10",
		"@babel/preset-typescript": "^7.13.0",
		"@testing-library/react-hooks": "^7.0.0",
		"@types/lodash": "^4.14.169",
		"@types/node": "^17.0.43",
		"@types/react": "^17.0.11",
		"eslint": "^7.26.0",
		"jest": "^27.0.6",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-query": "3.16.0",
		"react-test-renderer": "^17.0.2",
		"ts-loader": "^8.0.2",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"peerDependencies": {
		"react": "17.x",
		"react-dom": "17.x",
		"react-query": "3.16.x"
	},
	"jest": {
		"testMatch": [
			"<rootDir>/**/*.test.{js,jsx,ts,tsx}"
		],
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{js,jsx,ts,tsx}",
			"!<rootDir>/src/**/*.d.{js,jsx,ts,tsx}"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	}
}
