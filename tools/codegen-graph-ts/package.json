{
  "name": "@synthetixio/codegen-graph-ts",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.74.2",
  "description": "Generate typescript request library for any subgraph based on its entity definition",
  "main": "build/src/index.js",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "yarn build-node",
    "build-node": "tsc",
    "test-codegen": "mkdir -p generated && ts-node src/gen/index.ts gen -s __tests__/subgraphs/sample.json -o generated/exchanges.ts",
    "lint": "eslint './src/**/*.{js,ts,tsx}' && tsc",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
    "test": "yarn test-codegen && jest --coverage --no-cache",
    "tsc": "tsc --noemit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Synthetixio/codegen-graph-ts"
  },
  "author": "Daniel Beal <daniel@synthetix.io>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/KillerByte/codegen-graph-ts/issues"
  },
  "homepage": "https://github.com/KillerByte/codegen-graph-ts#readme",
  "dependencies": {
    "@synthetixio/wei": "workspace:*",
    "axios": "^0.21.4",
    "commander": "^8.1.0",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/commander": "^2.12.2",
    "@types/lodash": "^4.14.169",
    "@types/node": "^17.0.43",
    "@types/node-fetch": "^2.6.2",
    "eslint": "^8.22.0",
    "eval": "^0.1.6",
    "jest": "^27.0.6",
    "node-fetch": "^2.6.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "bin": "build/src/gen/index.js",
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/**/*.d.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
