{
	"name": "root",
	"version": "2.71.0",
	"workspaces": [
		"packages/contracts-interface",
		"packages/optimism-networks",
		"packages/transaction-notifier",
		"packages/wei",
		"packages/providers",
		"packages/queries",
		"**/*"
	],
	"private": true,
	"scripts": {
		"lint": "eslint './packages/**/*.{js,ts,tsx}' --quiet",
		"lint:fix": "eslint './packages/**/*.{js,ts,tsx}' --fix",
		"test": "npm --workspaces --if-present run test",
		"build": "npm --workspaces --if-present run build",
		"publish": "npm --workspaces publish"
	},
	"devDependencies": {
		"@babel/core": "7.11.0",
		"@babel/plugin-transform-runtime": "7.13.10",
		"@babel/preset-env": "7.13.10",
		"@babel/preset-typescript": "7.13.0",
		"@types/jest": "^26.0.24",
		"@types/mocha": "8.2.2",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"babel-jest": "^27.0.6",
		"babel-loader": "8.1.0",
		"eslint": "^7.26.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.2",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "4.2.5",
		"jest": "^27.0.6",
		"lint-staged": "10.2.11",
		"prettier": "^2.3.0",
		"ts-jest": "^27.0.4",
		"ts-loader": "8.0.2",
		"typescript": "4.4.2",
		"webpack": "4.44.1",
		"webpack-cli": "3.3.12"
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "babel-jest"
		},
		"coverageThreshold": {
			"global": {
				"branches": 70,
				"functions": 70,
				"lines": 80,
				"statements": 80
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"optionalDependencies": {
		"chokidar": "^3.5.2",
		"fsevents": "^2.3.2",
		"watchpack-chokidar2": "^2.0.1"
	}
}
