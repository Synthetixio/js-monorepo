{
  "name": "@synthetixio/queries",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0",
  "description": "react-query for pulling synthetix data in react interfaces",
  "source": "./src/index.ts",
  "main": "./build/node/src/index.js",
  "module": "./build/node/src/index.js",
  "browser": "./build/node/src/index.js",
  "types": "./build/node/src/index.d.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "yarn codegen && tsc",
    "lint": "eslint './src/**/*.{js,ts,tsx}' && tsc --noEmit",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
    "test": "jest --coverage --no-cache",
    "codegen": "node ./codegen.js"
  },
  "repository": "Synthetixio/js-monorepo",
  "author": "Synthetix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Synthetixio/js-monorepo/issues"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/address": "^5.6.1",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/constants": "^5.6.1",
    "@ethersproject/contracts": "^5.6.2",
    "@ethersproject/providers": "^5.6.8",
    "@ethersproject/strings": "^5.6.1",
    "@ethersproject/transactions": "^5.6.2",
    "@ethersproject/units": "^5.6.1",
    "@snapshot-labs/snapshot.js": "^0.4.13",
    "@synthetixio/codegen-graph-ts": "workspace:*",
    "@synthetixio/contracts": "workspace:*",
    "@synthetixio/contracts-interface": "workspace:*",
    "@synthetixio/optimism-networks": "workspace:*",
    "@synthetixio/wei": "workspace:*",
    "axios": "^0.21.4",
    "date-fns": "^2.19.0",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/lodash": "^4.14.169",
    "@types/react": "^17.0.11",
    "eslint": "^8.22.0",
    "jest": "^27.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "3.16.0",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.4.2"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version",
    "last 1 Edge version",
    "last 1 Opera version"
  ],
  "peerDependencies": {
    "react": "17.x",
    "react-dom": "17.x",
    "react-query": "3.16.x"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/**/*.test.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/**/*.d.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
