{
	"name": "@synthetixio/optimism-networks",
	"version": "0.0.14",
	"description": "Javascript library for handling networks on Optimism Layer 2",
	"main": "./build/node/index.js",
	"browser": "./build/index.js",
	"types": "./build/src/index.d.ts",
	"files": [
		"build"
	],
	"scripts": {
		"build": "npm run build-browser && npm run build-node",
		"build-node": "tsc -p tsconfig.node.json",
		"build-browser": "webpack --mode=production --max-old-space-size=4096",
		"examples:node": "ts-node --project tsconfig.node.json ./examples/node-example.js",
		"examples:browser": "npm run build-browser && http-server -o ./examples/browser-example.html -c-1",
		"lint": "eslint './src/**/*.{js,ts,tsx}' && tsc",
		"lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
		"test": "node --experimental-vm-modules ../../node_modules/.bin/jest --forceExit --coverage --no-cache",
		"tsc": "tsc --noemit"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Synthetixio/js-monorepo"
	},
	"author": "Synthetix",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Synthetixio/js-monorepo/issues"
	},
	"dependencies": {
		"@eth-optimism/watcher": "^0.0.1-alpha.9"
	},
	"devDependencies": {
		"@babel/core": "7.11.0",
		"@babel/plugin-transform-runtime": "7.13.10",
		"@babel/preset-env": "7.13.10",
		"@babel/preset-typescript": "7.13.0",
		"@types/lodash": "4.14.158",
		"@typescript-eslint/eslint-plugin": "3.8.0",
		"@typescript-eslint/parser": "3.8.0",
		"babel-jest": "26.2.2",
		"babel-loader": "8.1.0",
		"eslint": "7.6.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-import-resolver-typescript": "2.2.0",
		"eslint-plugin-import": "2.22.0",
		"eslint-plugin-prettier": "3.1.4",
		"http-server": "0.12.3",
		"husky": "4.2.5",
		"jest": "26.6.3",
		"lint-staged": "10.2.11",
		"prettier": "2.0.5",
		"ts-loader": "8.0.2",
		"ts-node": "8.10.2",
		"typescript": "3.9.3",
		"webpack": "4.44.1",
		"webpack-cli": "3.3.12"
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "babel-jest"
		},
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		},
		"modulePathIgnorePatterns": [
			"<rootDir>/build"
		]
	}
}
