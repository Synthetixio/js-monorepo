{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./ui",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../v1/**/*.ts",
    "../v1/**/*.tsx",
    "./ui/next-env.d.ts",
    "./ui/additional.d.ts",
    "./ui/next.config.js"
  ]
}
